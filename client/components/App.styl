blue = #1F4B99
teal = #6B9FA1
beige = #FFE39F
orange = #D78742
red = #9E2B0E

white-bg = #F5F8FA
white-border = rgba(16,22,26,.2)

helvetica = 'Helvetica Neue', Helvetica, sans-serif

small-button()
  min-width 24px
  min-height 24px
  line-height 24px
  padding 0 7px
  background-color #f5f8fa
  background-image linear-gradient(180deg,hsla(0,0%,100%,.8),hsla(0,0%,100%,0))
  color #182026
  text-transform uppercase
  font-size 10px
  cursor pointer
  border-radius 3px
  appearance none
  &:hover
    background-color darken(#f5f8fa, 10%)

*
  box-sizing border-box

html
body
  height 100%

body
  background white-bg
  font-family helvetica

.App
  max-width 800px
  margin 0 auto

.MessageList
  padding 20px

  .meta
    display flex
    align-items center
    justify-content space-between
    margin-bottom 10px

.Message
  border 1px solid white-border
  background white
  margin-bottom 5px

  .meta
    display flex
    align-times center
    border-bottom 1px solid white-border
    padding 10px
    background #EBF1F5
    opacity 0.7
    margin-bottom 0

.handle
  width 160px


.text
  background white
  padding 10px
  line-height 1.3

.SearchBox
  padding 20px
  position relative
  &.disabled
    .clear
      opacity 0

.hl
  display inline-block
  padding 0 2px
  background beige

.Spinner
  position absolute
  top 50%
  right 25px
  transform translateY(-50%)

.Spinner2
  display inline-block


.disabled
  pointer-events none
  opacity 0.6

// .ResyncButton

.outputPanel
  position fixed
  z-index 2
  top 100px
  left 50%
  bottom 100px
  transform translateX(-50%)
  width 100%
  max-width 900px
  background white
  box-shadow 0px 2px 50px 5px rgba(0,0,0,0.5)
  line-height 1.2
  border-radius 3px
  flex-direction column
  display flex
  display none
  &.isOpen
    display flex

  .head
    padding 10px
    text-transform uppercase
    border-radius 3px 3px 0 0
    flex-grow 0
    flex-shrink 0
    display flex
    align-items center
    small
      margin-left 10px
      font-size 10px
      opacity 0.6
      font-weight bold

    button
      margin-left auto
      margin-right 0
      outline none
      small-button()

  .message
    padding 10px
    background #B0CCFF
    flex-grow 0
    flex-shrink 0

  .body
    flex 1 100%
    font-size 11px
    font-family monospace
    white-space pre-wrap
    padding 10px
    margin 0
    background #333
    color white
    border-radius 0 0 3px 3px
    overflow auto

.resync
  small-button()

.clear
  small-button()
  position absolute
  top 50%
  right 45px
  transform translateY(-50%)

.LoadMoreButton
  text-align center
  margin 20px 0
  button
    small-button()

input.search
  padding 5px 20px
  width 100%
  font-size 32px
  border-radius 30px
  outline none
  border solid 1px white-border
  font-weight 300
  &:focus
    border 1px solid blue

h1.loading
  padding 20px
  font-weight 100
  margin 0

