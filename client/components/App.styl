blue = #1F4B99
teal = #6B9FA1
beige = #FFE39F
orange = #D78742
red = #9E2B0E

white-bg = #F5F8FA
white-border = rgba(16,22,26,.2)

helvetica = 'Helvetica Neue', Helvetica, sans-serif

*
  box-sizing border-box

html
body
  height 100%

body
  background white-bg
  font-family helvetica

.MessageList
  padding 20px

.Message
  border 1px solid white-border
  background white
  margin-bottom 5px

.text
  background white
  padding 10px
  line-height 1.3

.SearchBox
  padding 20px
  position relative
  &.disabled
    .clear
      opacity 0

.hl
  display inline-block
  padding 0 2px
  background beige

.Spinner
  position absolute
  top 50%
  right 25px
  transform translateY(-50%)

.Spinner2
  display inline-block

.count
  margin-bottom 10px

.disabled
  pointer-events none
  opacity 0.6

small-button()
  min-width 24px
  min-height 24px
  line-height 24px
  padding 0 7px
  background-color #f5f8fa
  background-image linear-gradient(180deg,hsla(0,0%,100%,.8),hsla(0,0%,100%,0))
  color #182026
  text-transform uppercase
  font-size 10px
  cursor pointer
  border-radius 3px
  &:hover
    background-color darken(#f5f8fa, 10%)

.clear
  small-button()
  position absolute
  top 50%
  right 45px
  transform translateY(-50%)

.LoadMoreButton
  text-align center
  margin 20px 0
  button
    small-button()

input.search
  padding 5px 20px
  width 100%
  font-size 32px
  border-radius 30px
  outline none
  border solid 1px white-border
  font-weight 300
  &:focus
    border 1px solid blue

h1.loading
  padding 20px
  font-weight 100
  margin 0

